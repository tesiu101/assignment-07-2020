{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "prettier",
    "react-hooks"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", 180],
    "react-hooks/rules-of-hooks": "error",
    "react/display-name": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "function-paren-newline": ["error", "consistent"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}
